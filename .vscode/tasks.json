{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run (Debug)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--debug"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Flutter: Build Windows",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"windows"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Flutter: Build Android APK",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Flutter: Clean",
			"type": "shell",
			"command": "flutter",
			"args": [
				"clean"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Flutter: Get Dependencies",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}